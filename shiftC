    <script src="https://cdn.jsdelivr.net/npm/persian-date@1.1.0/dist/persian-date.min.js"></script>

    <script>
      // ØªØ§Ø±ÛŒØ® Ù¾Ø§ÛŒÙ‡ (Ø§ÙˆÙ„ÛŒÙ† Ø±ÙˆØ² Ø´ÛŒÙØª Ø±ÙˆØ²)
      const baseDate = new persianDate([1404, 8, 15]);

      function generateSchedule() {
        const today = new persianDate();
        const tbody = document.querySelector("#shiftTable tbody");
        tbody.innerHTML = "";

        const diffDays = Math.floor((today - baseDate) / (1000 * 60 * 60 * 24));
        const shifts = ["Ø±ÙˆØ²", "Ø±ÙˆØ²", "Ø´Ø¨", "Ø´Ø¨", "ØªØ¹Ø·ÛŒÙ„", "ØªØ¹Ø·ÛŒÙ„"];

        for (let i = 0; i < 30; i++) {
          const date = today.clone().add("days", i);
          const dayOfWeek = date.format("dddd");
          const shiftType = shifts[(diffDays + i) % 6];

          const row = `<tr>
                        <td>${date.format("YYYY/MM/DD")}</td>
                        <td>${dayOfWeek}</td>
                        <td class="${shiftType}">${shiftType}</td>
                      </tr>`;
          tbody.insertAdjacentHTML("beforeend", row);
        }
      }

      // Ø§Ø¬Ø±Ø§ÛŒ Ø®ÙˆØ¯Ú©Ø§Ø± Ø¨Ø¹Ø¯ Ø§Ø² Ø¨Ø§Ø±Ú¯Ø°Ø§Ø±ÛŒ Ú©Ø§Ù…Ù„ ØµÙØ­Ù‡
